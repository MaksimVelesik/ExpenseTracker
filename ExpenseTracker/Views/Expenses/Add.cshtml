@model ExpenseTracker.Models.Expense
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавить расход</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Amount">Сумма</label>
        <input asp-for="Amount" name="Amount" type="number" step="0.01" class="form-control" required />
        <span asp-validation-for="Amount" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category">Категория</label>
        <select asp-for="Category" name="Category" class="form-control" required>
            <option value="">Выберите категорию</option>
            <option value="Еда">Еда</option>
            <option value="Транспорт">Транспорт</option>
            <option value="Развлечения">Развлечения</option>
        </select>
        <span asp-validation-for="Category" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Date">Дата</label>
        <input asp-for="Date" name="Date" type="date" class="form-control" required />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Добавить</button>
    <a href="/Expenses" class="btn btn-secondary">Назад</a>
</form>